model Message {
  id      String    @id @default(auto()) @map("_id") @db.ObjectId
  message String
  sent    DateTime  @default(now())
  
  sender  User      @relation(name: "SentBy", fields: [senderId], references: [id])
  senderId String   
  
  user    User      @relation(name: "ReceivedBy", fields: [userId], references: [id])
  userId  String
}

model User {
  id     String   @id @default(auto()) @map("_id") @db.ObjectId
  email  String   @unique
  name   String?
  imgsrc String?
  seen   Boolean  @default(false)
  
  sentMessages    Message[] @relation(name: "SentBy")
  receivedMessages Message[] @relation(name: "ReceivedBy")
}
